@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var actionNames = new Dictionary<string, string>
    {
        { "Index", "Trang Chủ Admin" },
        { "MenuItems", "Quản Lý Thực Đơn" },
        { "Tables", "Quản Lý Bàn" },
        { "Orders", "Quản Lý Bếp" },
        { "Forecast", "Dự Báo Lượng Khách" },
        { "CreateTable", "Thêm Bàn Mới" },
        { "EditTable", "Chỉnh Sửa Bàn" },
        { "CreateMenuItem", "Thêm Món Ăn" },
        { "EditMenuItem", "Chỉnh Sửa Món Ăn" },
        { "CreateMonAn", "Đăng Món Ăn" },
        { "CreateThucUong", "Đăng Thức Uống" },
        { "CreateRuou", "Đăng Rượu" }
    };
    
    var currentPageName = actionNames.ContainsKey(currentAction) ? actionNames[currentAction] : currentAction;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Admin" asp-action="Index">
                <i class="bi bi-house-fill me-1"></i>Trang Chủ Admin
            </a>
        </li>
        @if (currentAction != "Index")
        {
            <li class="breadcrumb-item active" aria-current="page">@currentPageName</li>
        }
    </ol>
</nav>

