@section Scripts {
    <script>
        async function updateTableStatus(tableId, newStatus) {
            const statusSelect = document.getElementById(`status-select-${tableId}`);
            const oldStatus = statusSelect.getAttribute('data-current-status');
            
            // N·∫øu kh√¥ng thay ƒë·ªïi, kh√¥ng l√†m g√¨
            if (oldStatus === newStatus) {
                statusSelect.value = oldStatus;
                return;
            }
            
            // Disable select trong l√∫c ƒëang c·∫≠p nh·∫≠t
            statusSelect.disabled = true;
            
            try {
                // L·∫•y AntiForgeryToken
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
                
                const response = await fetch('@Url.Action("UpdateTableStatus", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token,
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        tableId: tableId,
                        newStatus: parseInt(newStatus)
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // C·∫≠p nh·∫≠t data attribute ƒë·ªÉ l∆∞u tr·∫°ng th√°i m·ªõi
                    statusSelect.setAttribute('data-current-status', newStatus);
                    
                    // Hi·ªÉn th·ªã th√¥ng b√°o th√†nh c√¥ng
                    showToast('success', `ƒê√£ c·∫≠p nh·∫≠t tr·∫°ng th√°i b√†n th√†nh c√¥ng!`);
                    
                    // Reload trang sau 1 gi√¢y ƒë·ªÉ c·∫≠p nh·∫≠t th·ªëng k√™ v√† s·∫Øp x·∫øp l·∫°i
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    // Rollback n·∫øu l·ªói - kh√¥i ph·ª•c gi√° tr·ªã c≈©
                    statusSelect.value = oldStatus;
                    showToast('error', data.message || 'C√≥ l·ªói x·∫£y ra khi c·∫≠p nh·∫≠t tr·∫°ng th√°i');
                }
            } catch (error) {
                console.error('L·ªói khi c·∫≠p nh·∫≠t tr·∫°ng th√°i:', error);
                // Rollback n·∫øu l·ªói - kh√¥i ph·ª•c gi√° tr·ªã c≈©
                statusSelect.value = oldStatus;
                showToast('error', 'C√≥ l·ªói x·∫£y ra khi c·∫≠p nh·∫≠t tr·∫°ng th√°i');
            } finally {
                statusSelect.disabled = false;
            }
        }
        
        function showToast(type, message) {
            // T·∫°o toast notification ƒë∆°n gi·∫£n
            const toast = document.createElement('div');
            toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed top-0 end-0 m-3`;
            toast.style.zIndex = '9999';
            toast.innerHTML = `
                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}-fill me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(toast);
            
            // T·ª± ƒë·ªông x√≥a sau 3 gi√¢y
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>
