@model List<QLy_NhaHang.Models.MenuItem>
@{
    ViewData["Title"] = "Quản Lý Thực Đơn";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-menu.css" asp-append-version="true" />
}

<div class="container-fluid py-3 px-4">
    @await Html.PartialAsync("_AdminBreadcrumb")
</div>

<div class="admin-menu-page-container">
    <div class="container-fluid px-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="col-lg-3 col-xl-2">
                @await Html.PartialAsync("_AdminMenuSidebar")
            </div>

            <!-- Content Area -->
            <div class="col-lg-9 col-xl-10">
                <div id="contentArea" class="admin-content-section py-4 px-4">
                    <!-- Default: Hiển thị danh sách -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Danh Sách Món Ăn
                        </h2>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-success" onclick="openCreateModal('mon-an')">
                                <i class="bi bi-egg-fried me-2"></i>Thêm Món Ăn
                            </button>
                            <button type="button" class="btn btn-info" onclick="openCreateModal('thuc-uong')">
                                <i class="bi bi-cup-straw me-2"></i>Thêm Thức Uống
                            </button>
                            <button type="button" class="btn btn-danger" onclick="openCreateModal('ruou')">
                                <i class="bi bi-wine me-2"></i>Thêm Rượu
                            </button>
                        </div>
                    </div>

                    <!-- Alert Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width: 100px;">Ảnh</th>
                                                <th>Tên Món Ăn</th>
                                                <th>Danh Mục</th>
                                                <th>Giá</th>
                                                <th>Đơn Vị</th>
                                                <th>Trạng Thái</th>
                                                <th style="width: 150px;" class="text-center">Thao Tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                        {
                                                            <img src="@item.ImageUrl" 
                                                                 alt="@item.Name" 
                                                                 class="img-thumbnail" 
                                                                 style="width: 80px; height: 80px; object-fit: cover;" />
                                                        }
                                                        else
                                                        {
                                                            <div class="bg-light d-flex align-items-center justify-content-center" 
                                                                 style="width: 80px; height: 80px; border-radius: 0.25rem;">
                                                                <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                                            </div>
                                                        }
                                                    </td>
                                                    <td>
                                                        <strong>@item.Name</strong>
                                                        @if (!string.IsNullOrEmpty(item.Description))
                                                        {
                                                            <br />
                                                            <small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (item.Category != null)
                                                        {
                                                            <span class="badge bg-info">@item.Category.Name</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Chưa phân loại</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <strong class="text-danger">@item.Price.ToString("N0") đ</strong>
                                                    </td>
                                                    <td>@item.Unit</td>
                                                    <td>
                                                        @if (item.IsActive)
                                                        {
                                                            <span class="badge bg-success">Đang hoạt động</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Tạm ngưng</span>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="EditMenuItem" asp-route-id="@item.Id" 
                                                               class="btn btn-sm btn-outline-primary" 
                                                               title="Chỉnh sửa">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-outline-danger" 
                                                                    onclick="confirmDelete(@item.Id, '@item.Name')"
                                                                    title="Xóa">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card shadow-sm">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                                <h4 class="text-muted mb-3">Chưa có món ăn nào</h4>
                                <p class="text-muted mb-4">Hãy chọn một chức năng bên trái để đăng bài.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Menu Item Modal -->
<div class="modal fade" id="createMenuItemModal" tabindex="-1" aria-labelledby="createMenuItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="createMenuItemModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Đăng Bài
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="createMenuItemModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa món ăn <strong id="deleteItemName"></strong>?</p>
                <p class="text-danger small mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Hành động này không thể hoàn tác!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteItemName').textContent = name;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteMenuItem", "Admin")/' + id;
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Mở modal để đăng bài
        function openCreateModal(type) {
            const modal = new bootstrap.Modal(document.getElementById('createMenuItemModal'));
            const modalBody = document.getElementById('createMenuItemModalBody');
            const modalTitle = document.getElementById('createMenuItemModalLabel');
            
            // Set title theo loại
            const titles = {
                'mon-an': '<i class="bi bi-egg-fried me-2"></i>Đăng Món Ăn',
                'thuc-uong': '<i class="bi bi-cup-straw me-2"></i>Đăng Thức Uống',
                'ruou': '<i class="bi bi-wine me-2"></i>Đăng Rượu'
            };
            modalTitle.innerHTML = titles[type] || 'Đăng Bài';
            
            // Hiển thị loading
            modalBody.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
            
            // Mở modal
            modal.show();
            
            // Load form
            const url = '@Url.Action("GetCreateForm", "Admin")?type=' + type;
            loadFormToModal(url, modalBody);
        }

        // Load form vào modal
        function loadFormToModal(url, modalBody) {
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        if (response.status === 400) {
                            return response.text().then(text => {
                                throw new Error(text || 'Loại không hợp lệ');
                            });
                        }
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.text();
                })
                .then(html => {
                    modalBody.innerHTML = html;
                    // Re-initialize validation scripts
                    if (typeof $.validator !== 'undefined') {
                        $.validator.unobtrusive.parse('#createMenuItemForm');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    let errorMessage = 'Có lỗi xảy ra khi tải form. Vui lòng thử lại.';
                    if (error.message && error.message.includes('Không tìm thấy danh mục')) {
                        errorMessage = error.message + '<br/><small>Vui lòng tạo danh mục trong database trước.</small>';
                    }
                    modalBody.innerHTML = `<div class="alert alert-danger">${errorMessage}</div>`;
                });
        }

        // Load danh sách khi click vào menu sidebar
        document.addEventListener('DOMContentLoaded', function() {
            const menuItems = document.querySelectorAll('.sidebar-menu-item[data-action="loadList"]');
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const type = this.getAttribute('data-type');
                    
                    // Highlight menu item
                    document.querySelectorAll('.sidebar-menu-item').forEach(mi => mi.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Load danh sách
                    loadMenuItemsList(type);
                });
            });
        });

        // Load danh sách menu items theo category
        function loadMenuItemsList(type) {
            const contentArea = document.getElementById('contentArea');
            contentArea.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';
            
            const url = '@Url.Action("GetMenuItemsList", "Admin")?type=' + type;
            
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.text();
                })
                .then(html => {
                    contentArea.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error:', error);
                    contentArea.innerHTML = '<div class="alert alert-danger">Có lỗi xảy ra khi tải danh sách. Vui lòng thử lại.</div>';
                });
        }
    </script>
}

