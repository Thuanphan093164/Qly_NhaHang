@{
    // This will be populated by JavaScript with cart data
}

<div id="cartViewContent">
    <h4 class="mb-4">
        <i class="bi bi-cart-check me-2 text-success"></i>Giỏ Hàng Của Bạn
    </h4>
    
    <div id="cartItemsList">
        <!-- Cart items will be loaded here by JavaScript -->
    </div>
    
    <div class="mt-4 pt-3 border-top">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Tổng tiền:</h5>
            <h4 class="mb-0 text-primary fw-bold" id="cartTotalAmount">0 đ</h4>
        </div>
    </div>
</div>

<style>
    .cart-item {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        background-color: #f8f9fa;
    }
    
    .cart-item-header {
        display: flex;
        justify-content: between;
        align-items: center;
        margin-bottom: 0.5rem;
    }
    
    .cart-item-name {
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .cart-item-price {
        color: #0d6efd;
        font-weight: 600;
    }
    
    .cart-item-quantity {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }
    
    .quantity-btn {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: 1px solid #dee2e6;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .quantity-btn:hover {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }
    
    .quantity-input {
        width: 60px;
        text-align: center;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        padding: 0.25rem;
    }
    
    .remove-item-btn {
        color: #dc3545;
        cursor: pointer;
        transition: color 0.2s;
    }
    
    .remove-item-btn:hover {
        color: #c82333;
    }
    
    .empty-cart {
        text-align: center;
        padding: 3rem 1rem;
    }
    
    .empty-cart i {
        font-size: 4rem;
        color: #dee2e6;
    }
</style>

