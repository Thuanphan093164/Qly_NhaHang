<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - Rose Thảo Điền</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLy_NhaHang.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="admin-body">
    <!-- Admin Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-speedometer2 me-2"></i>Admin Panel
            </a>
            <div class="d-flex align-items-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm me-2" target="_blank">
                    <i class="bi bi-house me-1"></i>Xem Website
                </a>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-primary btn-sm">
                    <i class="bi bi-house-fill me-1"></i>Trang Chủ Admin
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="admin-main-content">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

