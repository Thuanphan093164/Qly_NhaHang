    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Rose Thảo Điền</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/QLy_NhaHang.styles.css" asp-append-version="true" />
        @await RenderSectionAsync("Styles", required: false)
    </head>
    <body>
        <!-- Header -->
        @await Html.PartialAsync("_Header")

        <!-- Main Content -->
        <main role="main" class="main-content">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="footer bg-dark text-light py-4">
            <div class="container">
                <div class="row g-3">
                    <div class="col-12 col-md-4 mb-3 mb-md-0">
                        <h5 class="mb-3">
                            <i class="bi bi-cup-hot-fill me-2"></i>Rose Thảo Điền
                        </h5>
                        <p class="text-muted small" style="word-break: break-word; overflow-wrap: break-word; white-space: normal;">
                            Khám phá hương vị ẩm thực đặc biệt với những món ăn được chế biến tinh tế từ những nguyên liệu tươi ngon nhất.
                        </p>
                    </div>
                    <div class="col-12 col-md-4 mb-3 mb-md-0">
                        <h5 class="mb-3">Liên Hệ</h5>
                        <ul class="list-unstyled text-muted small">
                            <li style="word-break: break-word; overflow-wrap: break-word; white-space: normal;"><i class="bi bi-geo-alt me-2"></i>123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh</li>
                            <li><i class="bi bi-telephone me-2"></i>0123 456 789</li>
                        <li style="word-break: break-word; overflow-wrap: break-word; white-space: normal;"><i class="bi bi-envelope me-2"></i>info@rose.com</li>
                        </ul>
                    </div>
                    <div class="col-12 col-md-4">
                        <h5 class="mb-3">Giờ Mở Cửa</h5>
                        <ul class="list-unstyled text-muted small">
                            <li>Thứ 2 - Chủ Nhật</li>
                            <li>9:00 - 23:00</li>
                        </ul>
                    </div>
                </div>
                <hr class="my-4 bg-secondary">
                <div class="text-center text-muted small">
                    &copy; 2025 Rose Thảo Điền. Tất cả quyền được bảo lưu.
                </div>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
