@model QLy_NhaHang.ViewModels.MenuViewModel
@{
    ViewData["Title"] = "Thực Đơn - Rose Thảo Điền";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<section class="menu-section py-5">
    <div class="container">
        <!-- Header Section -->
        <div class="row mb-5">
            <div class="col-12 text-center section-title">
                <h2 class="display-5 fw-bold mb-3">Thực Đơn</h2>
                <p class="text-muted lead">
                    @if (!string.IsNullOrEmpty(Model.CategoryName) && Model.CategoryName != "Tất cả")
                    {
                        <span>@Model.CategoryName</span>
                    }
                    else
                    {
                        <span>Khám phá hương vị ẩm thực đặc biệt</span>
                    }
                </p>
                <hr class="section-divider mx-auto">
            </div>
        </div>

        <!-- Menu Items Grid -->
        @if (Model.MenuItems != null && Model.MenuItems.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model.MenuItems)
                {
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                            <!-- Ảnh món ăn -->
                            <div class="menu-item-image-container position-relative">
                                @if (!string.IsNullOrEmpty(item.Anh))
                                {
                                    <img src="@item.Anh" 
                                         class="menu-item-image card-img-top" 
                                         alt="@item.Ten" 
                                         loading="lazy" />
                                }
                                else
                                {
                                    <div class="menu-item-placeholder">
                                        <i class="bi bi-image"></i>
                                    </div>
                                }
                                
                                <!-- Badge danh mục -->
                                @if (!string.IsNullOrEmpty(item.TenDanhMuc))
                                {
                                    <span class="badge bg-warning text-dark menu-item-category-badge">
                                        @item.TenDanhMuc
                                    </span>
                                }
                            </div>

                            <!-- Nội dung card -->
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold mb-2">@item.Ten</h5>
                                
                                @if (!string.IsNullOrEmpty(item.MoTa))
                                {
                                    <p class="card-text text-muted small mb-3 flex-grow-1" 
                                       style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                        @item.MoTa
                                    </p>
                                }

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 menu-item-price mb-0">
                                            @item.Gia.ToString("N0") đ
                                        </span>
                                        <span class="text-muted small">@item.DonVi</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="row">
                <div class="col-12 text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                    <h4 class="text-muted mb-3">Chưa có món ăn nào</h4>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.CategoryName) && Model.CategoryName != "Tất cả")
                        {
                            <span>Danh mục "@Model.CategoryName" hiện chưa có món ăn.</span>
                        }
                        else
                        {
                            <span>Thực đơn đang được cập nhật. Vui lòng quay lại sau.</span>
                        }
                    </p>
                </div>
            </div>
        }
    </div>
</section>

