@model List<QLy_NhaHang.ViewModels.MenuItemViewModel>


<section class="best-seller-section py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center section-title">
                <h2 class="display-5 fw-bold mb-3">Rose Thảo Điền</h2>
                <p class="text-muted lead">Bản giao hưởng huyền bí của giới thượng lưu</p>
                <hr class="section-divider mx-auto">
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                            <!-- Ảnh món ăn -->
                            <div class="menu-item-image-container position-relative">
                                @if (!string.IsNullOrEmpty(item.Anh))
                                {
                                    <img src="@item.Anh" 
                                         class="menu-item-image card-img-top" 
                                         alt="@item.Ten" 
                                         loading="lazy" />
                                }
                                else
                                {
                                    <div class="menu-item-placeholder">
                                        <i class="bi bi-image"></i>
                                    </div>
                                }
                                
                                <!-- Badge danh mục -->
                                @if (!string.IsNullOrEmpty(item.TenDanhMuc))
                                {
                                    <span class="badge bg-warning text-dark menu-item-category-badge">
                                        @item.TenDanhMuc
                                    </span>
                                }
                            </div>

                            <!-- Nội dung card -->
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold mb-2">@item.Ten</h5>
                                
                                @if (!string.IsNullOrEmpty(item.MoTa))
                                {
                                    <p class="card-text text-muted small mb-3 flex-grow-1" 
                                       style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                        @item.MoTa
                                    </p>
                                }

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="h5 menu-item-price mb-0">
                                            @item.Gia.ToString("N0") đ
                                        </span>
                                        <span class="text-muted small">@item.DonVi</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Nhóm 4 ảnh đầu -->
            <div class="row g-4 mb-4">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                        <div class="menu-item-image-container position-relative">
                            <img src="~/images/home/1.jpg" 
                                 class="menu-item-image card-img-top" 
                                 alt="Hình ảnh 1" 
                                 loading="lazy" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                        <div class="menu-item-image-container position-relative">
                            <img src="~/images/home/2.jpg" 
                                 class="menu-item-image card-img-top" 
                                 alt="Hình ảnh 2" 
                                 loading="lazy" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                        <div class="menu-item-image-container position-relative">
                            <img src="~/images/home/3.jpg" 
                                 class="menu-item-image card-img-top" 
                                 alt="Hình ảnh 3" 
                                 loading="lazy" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                        <div class="menu-item-image-container position-relative">
                            <img src="~/images/home/4.jpg" 
                                 class="menu-item-image card-img-top" 
                                 alt="Hình ảnh 4" 
                                 loading="lazy" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- Text dưới 4 ảnh đầu -->
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <p class="lead text-muted mb-0">
                        Rose Villa Thảo Điền là nơi giao thoa của nhiều phong cách nghệ thuật khác nhau
                    </p>
                </div>
            </div>

            <!-- Nhóm 4 ảnh sau -->
            <div class="row g-4 mb-4">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card menu-item-card h-100 shadow-sm border-0 overflow-hidden">
                        <div class="menu-item-image-container position-relative">
